super + alt + Escape
	bspc quit

super + {_,shift + }q
	bspc node -{c,k}

super + t
	bspc desktop -l next

super + apostrophe
	bspc window -s last

# focus/swap the node in the given direction
super + {_,ctrl +}{h,j,k,l}
	bspc-focus {_,-m }{west,south,north,east}

super + shift + {_,ctrl +}{h,j,k,l}
	bspc-swap {_,-m }{west,south,north,east}

super + {_,shift +}{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

super + Return
	urxvt -e bash -c "tmux new || tmux attach"

super + grave
	scratch

super + shift + grave
	emacsclient -e '(open-scratch-frame)'

super + space
	rofi-appmenu

super + Tab
	rofi-windowmenu

super + backslash
	rofi-passmenu

super + Escape
	pkill -USR1 -x sxhkd

{Prior,Next}
	:


#
##

# Toggle floating/fullscreen
super + {_,ctrl + }f
	bspc node -t ~{floating,fullscreen}


#
## Media keys

# screenshot region
Print
	scrcap
# screencast region to mp4
super + Print
	scrrec -s ~/shared/$(date +%F-%T).mp4
# screencast region to gif
super + ctrl + Print
	scrrec -s ~/shared/$(date +%F-%T).gif

XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

XF86AudioMute
	amixer -q set Master toggle
XF86AudioLowerVolume
	amixer -q set Master 10%- unmute
XF86AudioRaiseVolume
	amixer -q set Master 10%+ unmute

XF86Audio{Play,Pause}
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
XF86AudioNext
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
XF86AudioPrev
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

# X86Search

