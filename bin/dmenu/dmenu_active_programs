#!/usr/bin/env cached-nix-shell
#! nix-shell -i bash -p wmctrl dmenu

# Search through open programs and switch to their tag
program=$(wmctrl -lx | cut -d ' ' -f4 | cut -d '.' -f2 |\
          tr "[:upper:]" "[:lower:]" |\
          dmenu -i -p "âš¡"  -fn "monospace:size=15")

if [ ! -z "$program" -a "$program" != " " ]; then
  wmctrl -x -a "$program"
fi
