#!/usr/bin/env sh

rofi_command="rofi -theme theme/powermenu.rasi"

### Options ###
power_off="Shutdown"
reboot="Reboot"
lock="Lock"
suspend="Sleep"
# Variable passed to rofi
options="$suspend\n$lock\n$reboot\n$power_off"

case "$(echo -e "$options" | $rofi_command -dmenu)" in
    $power_off)
        systemctl poweroff
        ;;
    $reboot)
        systemctl reboot
        ;;
    $suspend)
        systemctl suspend
        ;;
    $lock)
        zzz
        ;;
esac